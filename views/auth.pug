extends layout

block head
  // Here will go our css/js links
  script(type="text/javascript" src="/js/jquery-3.2.1.min.js" charset="utf-8")
  script(type="text/javascript" src="/js/bootstrap.min.js" charset="utf-8")
  script(type="text/javascript" src="/js/index.js" charset="utf-8")
  script(type="text/javascript" src="https://d3js.org/d3.v4.min.js" charset="utf-8")
  link(rel="stylesheet", href="https://fonts.googleapis.com/css?family=Lato:300,400,700")
  link(rel='stylesheet', href='/css/main.css')
  link(rel='stylesheet', href='/css/bootstrap.min.css')
  link(rel='stylesheet', href='/css/bootstrap-theme.min.css')
    
block content
  div.container
    div.row
      div.col-lg-6.col-md-6.col-sm-6.col-xs-6
        hgroup.my-auto
          form(method='post', action='/signin')
            div.group
              input(type='text' name='login')
              span.highlight
              span.bar       
              label Email 
            div.group
              input(type='password', name='pw')
              span.highlight
              span.bar      
              label Password    
            button.button.buttonBlue(type="submit") Se connecter
              div.ripples.buttonRipples
                span.ripplesCircle
      div.col-lg-6.col-md-6.col-sm-6.col-xs-6
        hgroup
          form(method='post', action='/signup')
            div.group
              input(type='text' name='login')
              span.highlight
              span.bar       
              label Email
            div.group
              input(type='password', name='pw')
              span.highlight
              span.bar      
              label Password    
            button.button.buttonBlue(type="submit") S'inscrire
              div.ripples.buttonRipples
                span.ripplesCircle
      
